<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Menu">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="start|center"
        android:paddingHorizontal="16dp"
        android:background="@drawable/sh_bg_header_police_blue"
        android:text="Menú"
        android:textColor="@color/flesh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Search -->
    <SearchView
        android:id="@+id/svBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/sh_bg_btn_bright_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader" />

    <ImageView
        android:id="@+id/ivBuscar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/sh_bg_circle_carmine_pink"
        android:padding="12dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_buscar"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/svBuscar"
        app:layout_constraintEnd_toEndOf="@id/svBuscar" />

    <!-- Categorías -->
    <TextView
        android:id="@+id/tvCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Categorías"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/police_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svBuscar" />

    <!-- Contenedor horizontal de categorías -->
    <LinearLayout
        android:id="@+id/layoutCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hot Drinks -->
        <TextView
            android:id="@+id/tvHotDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_bg_btn_carmine_pink"
            android:gravity="center"
            android:padding="12dp"
            android:text="Hot drinks"
            android:textColor="@color/flesh"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_coffee_cup"
            android:drawablePadding="8dp"/>

        <!-- Cold Drinks -->
        <TextView
            android:id="@+id/tvColdDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/sh_bg_btn_bright_gray"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cold drinks"
            android:textColor="@color/police_blue"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_coffee_cup_drink"
            android:drawablePadding="8dp"/>

        <!-- Sweets -->
        <TextView
            android:id="@+id/tvSweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/sh_bg_btn_bright_gray"
            android:gravity="center"
            android:padding="12dp"
            android:text="Sweets"
            android:textColor="@color/police_blue"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_sandwich"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- Lista simple de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCategorias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
